<% if flash.any? %>
    <% flash.each do |type, msg| %>
        <div class="mt-4 alert alert-<%= type %> alert-dismissible fade show" role="alert">
            <strong><%= msg %></strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% end %>
<% end %>